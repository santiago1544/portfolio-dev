---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro'
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import Expirience from '../components/Expirience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Code from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
import Profile from '../components/icons/Profile.astro';
import AboutMe from '../components/AboutMe.astro'
import Contact from '../components/icons/Contact.astro';
---

<Layout 
  title="Portafolio de Santiago - Desarrollador y programador web con 2 años de experiencia"
  description='contrata a Santiago para el desarrollo y diseño de aplicativos web'  
>
	<main class ="px-4">
    <SectionContainer class="py-16 md:py-36">
      <img 
        class="rounded-full size-12 mb-5"
        src="data:image/jpeg;base64,"
        alt="foto personal"
      >
      <h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pg-6 lg:pb-10">
        Hola, Soy Santiago 
        <a 
          href="https://www.linkedin.com/in/santiago-sandoval-novoa-04410a1b2/" 
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105">
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-1xl text-wrap max-w-[700px]">
        <span>+3 años de experiencia.</span> <span class="text-yellow-200/90"> Desarrollador Front-End y Diseñador UI/UX.</span> <span class="text-red-200/90"> De Bogotá, 
        Colombia. </span> <span class="opacity-85">Enfocado en crear aplicaciones y diseños web</span> 
      </h2>
      <nav class="flex gap-4 mt-7 flex-wrap">

        <SocialPill href="https://www.linkedin.com/in/santiago-sandoval-novoa-04410a1b2/">
          <LinkedInIcon class="size-4 md:size-6"/>
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/santiago1544?tab=repositories">
          <GitHubIcon class="size-4 md:size-6"/>
          GitHub
        </SocialPill>
        <SocialPill href="mailto:sandovalsanty@outlook.com">
          <MailIcon class="size-4 md:size-6"/>
          sandovalsanty@outlook.com
        </SocialPill>
      </nav>
    </SectionContainer>
    
    
    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-5 flex gap-x-3 items-center">
        <Briefcase class="size-7"></Briefcase>
        Experiencia Laboral
      </h2>
      <Expirience/>
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        <Code class="size-7"/>
        Proyectos
      </h2>
      <Projects/>
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2 class="text-3xl font-semibold mb-5 flex gap-x-3 items-center">
        <Profile class="size-7"/>
        Sobre mi
      </h2>
      <AboutMe/>
    </SectionContainer>
	</main>
</Layout>